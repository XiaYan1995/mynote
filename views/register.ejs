<%- include header %>
	<div class="text-center page-title">新用户注册</div>
	<div class="container">
		<div class="row">
			<div class="col-xs-4 col-xs-offset-4">
				<form method="post">
					<div class="form-group">
						<input type="text" class="form-control" name="username" placeholder="<% if(flag==1) { flag=0 %>用户名已经存在<% } else if(flag==2) { flag=0 %>用户名只能包含大小写字母与数字,3-20个字符<% } else {%>用户名<% } %>">
					</div>

					<div class="form-group">
						<input type="password" class="form-control" name="password" placeholder="<% if(flag1==1) { flag1=0 %>密码必须包含大小写字母与数字，且长度不能少于6位<% } else {%>密码<% } %>">
					</div>

					<div class="form-group">
						<input type="password" class="form-control" name="passwordRepeat" placeholder="<% if(flag2==1) { flag2=0 %>请再输入一次确认密码<% } else if(flag2==2) { flag2=0 %>两次输入的密码不一致<% } else {%>确认密码<% } %>">
					</div>

					<button type="submit" class="btn btn-default center-block">注册</button>

				</form>
			</div>
		</div>
	</div>
<%- include footer %>